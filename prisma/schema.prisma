generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../bluestone.db"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}

model Query {
  id        String      @id @default(uuid())
  username  String
  query     String
  email     String
  status    String      @default("unseen")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @default(now())
  replies   SentEmail[]
}

model SentEmail {
  id        String   @id @default(uuid())
  to        String
  message   String
  createdAt DateTime @default(now())
  Query     Query?   @relation(fields: [queryId], references: [id])
  queryId   String?
}

model JobListing {
  id          String   @id @default(uuid())
  title       String
  description String
  jobType     String   @default("full_time")
  contact     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}
